extends ../layout_app

block content_app
    .list-content
        .list-title
            h1 Historial de Notas
        .list-main
            for nota in notas
                .list-main-title
                    a(href="/app/notas/#{nota._id}")=  nota.student.name + ' ' + nota.student.lastname
                .list-button
                    a.list-button-1(href="/app/notas/#{nota._id}/edit") Editar 
                .list-button
                    form(action="/app/notas/#{nota._id}?_method=DELETE", method="POST")
                        input.list-button-2(type="submit", value="Eliminar")