extends layout

block content
    .signup-content
        .signup-title
            a(href="/") Proschool
            h1 Registrate
        .signup-form
            form(action="/signup", method="POST")
                .signup-input
                    input(type="text", name="name", placeholder="Nombre", id="name")
                .signup-input
                    input(type="text", name="lastname", placeholder="Apellido", id="lastname")
                .signup-input
                    input(type="text", name="email", placeholder="Correo electronico", id="email")
                .signup-select
                    label Tipo de usuario
                    select(name="typeuser")
                        option(value="Estudiante" , selected) Estudiante
                        option(value="Profesor") Profesor
                        option(value="Acudiente") Acudiente
                .signup-input
                    input(type="text", name="username", placeholder="Nombre de usuario", id="username")
                .signup-input
                    input(type="password", name="password", placeholder="Contraseña", id="password")
                .signup-input
                    input(type="password", name="password_confirmation", placeholder="Confirmar contraseña", id="password_confirmation")
                .signup-button
                    input.signup-button-1(type="submit" value="Registrar")
                .signup-button
                    a.signup-button-2(href="/") Ya tengo cuenta