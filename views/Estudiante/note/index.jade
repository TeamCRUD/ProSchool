extends ../layout_student

block content_student
   .list-content
        .list-title
            h1 Lista de Notas
            b Apareceran notas de todo tus profesores
        .list-task
            for task in tasks
                if task.teacher.username = profesor && task.note != null
                    p #{task.task} Nota: #{task.note}
                else
                    p Tu profesor #[a(href='/app/#{task.teacher.username}') #{task.teacher.fullname}] no ha subido notas refentes a ti
