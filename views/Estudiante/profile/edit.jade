extends ../layout_student

block content_student
    .main-content
        .main-data
            .data-avatar
                form(action="/app/#{user.username}?_method=PUT", method="POST")
                    input(type="text" name='fullname' placeholder="Nombre completo" value="#{user.fullname}")
                    input(type="text" name='email' placeholder="Email" value='#{user.email}')
                    if(user.school == undefined)
                        input(type="text" name='school' placeholder="Escuela")
                    if(user.school != undefined)
                        input(type="text" name='school' placeholder="Escuela" value='#{user.school}')
                    if(user.grade == undefined)
                        input(type="text" name='grade' placeholder="Grado")
                    if(user.grade != undefined)
                        input(type="text" name='grade' placeholder="Grado" value='#{user.grade}')
                    input(type="submit" value='Guardar cambios')