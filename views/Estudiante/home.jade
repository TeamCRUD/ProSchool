extends layout_student

block content_student
    .main-content
        .main-data.hideL
            .data-avatar
                include ../includes/avatar/avatar_data
            .data-links
                include ../includes/avatar/estudiante_links
        .main-nota
            h1.nota-title Tareas
            p.nota-subtitle Todas las tareas de tus profesores
            if user.grade
                - var note = false
                for nota in notas
                    if nota.note == null
                        .nota-item
                            if typeof nota.profesor != "undefined"
                                b.nota-fullname #{nota.teacher.fullname} 
                                s.nota-username #[a(href="/app/#{nota.teacher.username}") @#{nota.teacher.username}] 
                                br
                            a(href='/app/task/#{nota._id}').nota-parrafo= nota.task
                            - note = true
                if !note
                    p Ningun profesor ha subido tarea
            else
                p No has asignado tu grado
